<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.hobbes09.picmemory.view.fragment.PlayFragment">


    <TextView
        android:text="Round 1"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" android:layout_marginTop="15dp"
        android:id="@+id/tvHeader"/>

    <Button
        android:background="@drawable/refresh"
        android:gravity="center"
        android:layout_width="20dp"
        android:layout_height="20dp" android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp" android:layout_marginEnd="12dp"
        android:layout_marginTop="14dp" android:id="@+id/btnNew"/>
    <android.support.v7.widget.RecyclerView
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/rvGrid" android:layout_below="@+id/tvHeader"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:text=""
        android:textColor="#000000"
        android:textSize="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/rvGrid"
        android:layout_alignEnd="@+id/tvHeader"
        android:id="@+id/tvCountDown"/>
    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginTop="7dp"
        android:id="@+id/ivQuestion"
        android:layout_below="@+id/tvCountDown"
        android:layout_alignEnd="@+id/tvHeader"/>

</RelativeLayout>
